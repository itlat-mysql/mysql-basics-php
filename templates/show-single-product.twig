{% extends 'base.twig' %}

{% block content %}
<div class="card">
    <div class="card-header">
        <h4>{{ product.name | escape }}</h4>
    </div>
    <div class="card-body">
        <div class="row text-center">
            <div class="col-6">
                <strong>Price:</strong> {{ product.price | escape }}
            </div>
            <div class="col-6">
                <strong>Code:</strong> {{ product.ean | escape }}
            </div>
        </div>
    </div>
    <div class="card-footer text-end">
        <strong>Created at:</strong> {{ product.created_at | escape }}
    </div>
</div>
{% endblock %}